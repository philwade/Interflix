<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#B9090B"
    android:paddingTop="80px"
    android:paddingLeft="105px"
    >
    <LinearLayout 
	    android:orientation="vertical"
    	android:layout_width="90px"
    	android:layout_height="wrap_content"
	    android:paddingLeft="20px"
    	>
    	<ImageButton
			android:id="@+id/que_link_view"
			android:src="@drawable/que_button"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		/>
 	</LinearLayout>
    	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:text="@string/que_link"
    			android:id="@+id/que_text"
			    android:paddingLeft="18px"
    			android:textSize="16sp" />
    <LinearLayout
	    android:orientation="vertical"
    	android:layout_width="90px"
    	android:layout_height="wrap_content"
	    android:paddingLeft="20px"
	    android:paddingTop="20px"
    	>
    	<ImageButton
		android:id="@+id/search_link_view"
		android:src="@drawable/search_button"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
 	</LinearLayout>
    	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:text="@string/search_link"
    			android:id="@+id/search_text"
			    android:paddingLeft="12px"
    			android:textSize="16sp" />
</LinearLayout>
